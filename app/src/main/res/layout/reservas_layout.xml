<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btnFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECHA"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btnHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HORA"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_below="@id/btnFecha"/>

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/btnFecha"
        android:contextClickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:textIsSelectable="false"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/edtHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtFecha"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_toEndOf="@+id/btnHora"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:textIsSelectable="false"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:id="@+id/tvPersonas"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_below="@id/btnHora"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="PERSONAS" />

    <Spinner
        android:id="@+id/spinnerPersonas"
        android:layout_width="209dp"
        android:layout_height="36dp"
        android:layout_below="@id/edtHora"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/tvPersonas" />

    <Button
        android:id="@+id/btnReserva"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="RESERVAR"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="292dp" />

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerPersonas"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_toEndOf="@+id/tvNombre"
        android:ems="10"
        android:inputType="none"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_below="@id/tvPersonas"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="NOMBRE" />

    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_below="@id/tvNombre"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="NUMERO TLF" />

    <EditText
        android:id="@+id/edtNumero"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@id/edtNombre"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_toEndOf="@+id/tvNumero"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="292dp"
        android:maxLength="9"/>

</RelativeLayout>
