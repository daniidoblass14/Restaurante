<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPago"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tvNumeroTelefono"
        android:layout_width="154dp"
        android:layout_height="56dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="NUMERO DE TLF"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="217dp" />

    <EditText
        android:id="@+id/edtNumeroTelefono"
        android:layout_width="155dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:contextClickable="false"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="218dp"
        android:maxLength="9"/>

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="154dp"
        android:layout_height="56dp"
        android:layout_above="@id/btnPagar"
        android:layout_centerInParent="true"
        android:enabled="false"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="217dp" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:enabled="false"
        android:text="PAGAR"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="292dp" />

    <Button
        android:id="@+id/btnCuenta"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvPrecio"
        android:layout_centerInParent="true"
        android:text="MOSTRAR CUENTA"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="292dp" />
</RelativeLayout>